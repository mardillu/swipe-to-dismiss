<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mardillu.swipe.sample">

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher"
                 android:theme="@style/AppTheme">

        <activity
            android:name="com.mardillu.swipe.sample.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mardillu.swipe.sample.ListViewActivity"
                  android:theme="@style/AppTheme"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.mardillu.swipe.sample.RecyclerViewActivity"
                  android:theme="@style/AppTheme"
                  android:screenOrientation="portrait"/>

    </application>

</manifest>
